<div class="row">
  <div class="col-md-10 mx-auto">
    <div class="card">
      <div class="card-header bg-primary text-white">
        Messages
      </div>
      <div class="card-body">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th>First Name:</th>
              <td><%= @message.first_name %></td>
            </tr>
            <tr>
              <th>Last Name:</th>
              <td><%= @message.last_name %></td>
            </tr>
            <tr>
              <th>Email:</th>
              <td><%= @message.email %></td>
            </tr>
            <tr>
              <th>Subject:</th>
              <td><%= @message.subject %></td>
            </tr>
            <tr>
              <th>Description:</th>
              <td><%= @message.description %></td>
            </tr>
          </tbody>
        </table>
        <%= link_to 'Edit', edit_contact_message_path(@message),
                    class: 'btn btn-primary' %>
        <%= link_to 'Delete', contact_message_path(@message),
                    class: 'btn btn-danger',
                    method: 'delete',
                    data: { confirm: 'Are you sure ?' } %>
      </div>
    </div>
  </div>
</div>